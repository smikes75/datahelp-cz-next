  Content-Security-Policy: default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https: *.unsplash.com; font-src 'self' data: https:; connect-src 'self' https:; frame-src 'self' https: *.google.com;
  X-XSS-Protection: 1; mode=block

